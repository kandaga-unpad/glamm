    <div class="max-w-7xl mx-auto">
      <h3>GLAMM Dashboard</h3>
    </div>
  </section>
  
  <section class="w-full h-full flex flex-col max-w-7xl mx-auto">
    <div>
      <.flash_group flash={@flash} />
    </div>
    
    <div class="-mt-14">
